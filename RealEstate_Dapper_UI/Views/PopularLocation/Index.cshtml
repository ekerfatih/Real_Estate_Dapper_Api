@model List<ResultPopularPlaceDtos>
@{
    Layout = "~/Views/Admin/Index.cshtml";
}

<style>
    img{
        border-radius: 50%;
    }
</style>


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Servis Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Popüler Lokasyon Şehir</th>
                                <th scope="col">Popüler Lokasyon Resim</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int value = @Model.Count();

                            }

                            @for (int i = 0; i < value; i++)
                            {

                                <tr>
                                    <th scope="row">@(i+1)</th>
                                    <td>@Model[i].CityName</td>
                                    <td><img class="img-fluid" src="@Model[i].ImageUrl" height="50" width="50"></td>
                                    <td><a href="/PopularLocation/DeletePopularLocation/@Model[i].LocationId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/PopularLocation/UpdatePopularLocation/@Model[i].LocationId"  class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-action="CreatePopularLocation" asp-controller="PopularLocation" class="btn btn-outline-info">Yeni Popüler Lokasyon Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>

