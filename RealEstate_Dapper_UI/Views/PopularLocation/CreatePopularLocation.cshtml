@model CreatePopularLocationDtos

@{
    Layout = "~/Views/Admin/Index.cshtml";
}



<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Popüler Lokasyon Ekleme Sayfası</h6>
                <form asp-controller="PopularLocation" asp-action="CreatePopularLocation" method="post">
                    <label asp-for="CityName" class="form-label">Lokasyon İsmi</label>
                    <input asp-for="CityName" type="text" class="form-control">
                    <br>
                    <label asp-for="ImageUrl" class="form-label">Lokasyon Fotoğraf</label>
                    <input asp-for="ImageUrl" type="text" class="form-control">
                    <br>
                    <button type="submit" class="btn btn-primary">Lokasyonu Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>



