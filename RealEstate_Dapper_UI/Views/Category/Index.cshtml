@model List<ResultCategoryDto>
@{
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Kategori Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Kategori Adı</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int value = @Model.Count();

                            }

                            @for (int i = 0; i < value; i++)
                            {

                                <tr>
                                    <th scope="row">@(i+1)</th>
                                    <td>@Model[i].CategoryName</td>
                                    <td>@(Model[i].CategoryStatus ? "Aktif" : "Pasif")</td>
                                    <td><a href="/Category/DeleteCategory/@Model[i].CategoryId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Category/UpdateCategory/@Model[i].CategoryId"  class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-action="CreateCategory" asp-controller="Category" class="btn btn-outline-info">Yeni Kategori Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>

