@model UpdateCategoryDto

@{
    Layout = "~/Views/Admin/Index.cshtml";
}



<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Kategori Güncelleme Sayfası</h6>
                <form asp-controller="Category" asp-action="UpdateCategory" method="post">
                    <input type="hidden" asp-for="CategoryId">
                    <label asp-for="CategoryName" class="form-label"></label>
                    <input asp-for="CategoryName" type="text" class="form-control">
                    <br>
                    <button type="submit" class="btn btn-success">Kategoriyi Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>



