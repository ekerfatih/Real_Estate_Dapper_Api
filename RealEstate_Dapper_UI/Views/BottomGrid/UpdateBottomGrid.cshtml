@model UpdateBottomGridDto

@{
    Layout = "~/Views/Admin/Index.cshtml";
}



<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Servis Ekleme Sayfası</h6>
                <form asp-controller="BottomGrid" asp-action="UpdateBottomGrid" method="post">
                    <input type="hidden" asp-for="BottomGridId">
                    <label asp-for="BottomGridIcon" class="form-label">BottomGrid Simgesi</label>
                    <input asp-for="BottomGridIcon" type="text" class="form-control">
                    <br>
                    <label asp-for="BottomGridTitle" class="form-label">BottomGrid Başlığı</label>
                    <input asp-for="BottomGridTitle" type="text" class="form-control">
                    <br>
                    <label asp-for="BottomGridDescription" class="form-label">BottomGrid Açıklaması</label>
                    <input asp-for="BottomGridDescription" type="text" class="form-control">
                    <br>
                    <button type="submit" class="btn btn-primary">BottomGrid'i Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

