@model List<ResultBottomGridDtos>
@{
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Bottom Grid Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">BottomGrid Başlığı</th>
                                <th scope="col">BotomGrid Açıklaması</th>
                                <th scope="col">BotomGrid Simgesi</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int value = @Model.Count();

                            }

                            @for (int i = 0; i < value; i++)
                            {

                                <tr>
                                    <th scope="row">@(i+1)</th>
                                    <td>@Model[i].BottomGridTitle</td>
                                    <td>@(Model[i].BottomGridDescription )</td>
                                    <td>@(Model[i].BottomGridIcon )</td>
                                    <td><a href="/BottomGrid/DeleteBottomGrid/@Model[i].BottomGridId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/BottomGrid/UpdateBottomGrid/@Model[i].BottomGridId"  class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-action="CreateBottomGrid" asp-controller="BottomGrid" class="btn btn-outline-info">Yeni BottomGrid Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>

