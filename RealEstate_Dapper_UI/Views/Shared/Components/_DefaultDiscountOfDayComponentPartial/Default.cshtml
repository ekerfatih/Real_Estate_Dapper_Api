@model List<ResultLast3RentProductWithCategoryDto>
@{
    int allowedLength = 50;
}

<div class="w3l-news" id="news">
    <section id="grids5-block" class="py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <h3 class="title-big text-center">Eklenen Son 3 Ä°lan</h3>
            <div class="row mt-lg-5 mt-4 pt-3">
                @foreach(var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mt-md-0 mt-sm-4">
                        <div class="grids5-info">
                            <span class="posted-date">
                                <a href="#blog-single">
                                    <span class="small">@item.AdvertisementDate.ToString("yyyy")</span>
                                    <span class="big">@item.AdvertisementDate.ToString("dd")</span>
                                    <span class="small">@item.AdvertisementDate.ToString("MMM")</span>
                                </a>
                            </span>
                            <a href="#blog-single" class="d-block zoom">
                                <img style="height:250px" src="@item.CoverImage" alt=""
                                class="img-fluid news-image" />
                            </a>
                            <div class="blog-info">
                                <a href="#category" class="category">@item.CategoryName</a>
                                <h4><a href="#blog-single">@item.Title</a></h4>

                               @if (item.Description.Length > allowedLength)
                                {
                                    <p>@item.Description.Substring(0, allowedLength)</p>
                                }
                                else
                                {
                                    <p>@item.Description</p>
                                }
                                        
                                 
                                
                            </div>
                        </div>
                    </div>
                    
                }

                </div>
            </div>
        </section>
    </div>
