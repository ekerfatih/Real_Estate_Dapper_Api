@model List<ResultWhoWeAreDetailDto>
@{
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Biz Kimiz? Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Biz Kimiz Başlık</th>
                            <th scope="col">Biz Kimiz Alt Başlık</th>
                            <th scope="col">Biz Kimiz Açıklama</th>
                            <th scope="col">Biz Kimiz Açıklama2</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                        </thead>
                        <tbody>
                        @{
                            int value = @Model.Count();
                        }

                        @for (int i = 0; i < value; i++)
                        {
                            <tr>
                                <th scope="row">@(i + 1)</th>
                                <td>@Model[i].Title</td>
                                <td>@Model[i].Subtitle</td>
                                <td>@Model[i].Description1</td>
                                <td>@Model[i].Description2</td>
                                <td><a href="/WhoWeAre/DeleteWhoWeAre/@Model[i].WhoWeAreDetailId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/WhoWeAre/UpdateWhoWeAre/@Model[i].WhoWeAreDetailId" class="btn btn-outline-success">Güncelle</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                    <a href="/WhoWeAre/CreateWhoWeAre" class="btn btn-outline-info">Yeni Biz Kimiz? Veri Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>
