@model UpdateWhoWeAreDetailDto

@{
    Layout = "~/Views/Admin/Index.cshtml";
}



<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Biz Kimiz ? Güncelleme Sayfası</h6>
                <form asp-action="UpdateWhoWeAre" asp-controller="WhoWeAre" method="post">
                <input type="hidden" asp-for="WhoWeAreDetailId">

                    <div>
                        <label asp-for="Title" class="form-label">Biz kimiz Başlık</label>
                        <input asp-for="Title" type="text" class="form-control">
                        <br>
                    </div>
                    <div>
                        <label asp-for="Subtitle" class="form-label">Biz Kimiz Alt Başlık</label>
                        <input asp-for="Subtitle" type="text" class="form-control">
                        <br>
                    </div>
                    <div>
                        <label asp-for="Description1" class="form-label">Açıklama 1</label>
                        <textarea asp-for="Description1" type="text" class="form-control"></textarea>
                        <br>
                    </div>
                    <div>
                        <label asp-for="Description2" class="form-label">Açıklama 2</label>
                        <textarea asp-for="Description2" type="text" class="form-control"></textarea>
                        <br>
                    </div>


                    <button type="submit" class="btn btn-primary">BizKimiz? Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>
