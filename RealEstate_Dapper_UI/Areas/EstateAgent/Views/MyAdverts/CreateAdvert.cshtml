@model CreateProductDto

@{
    ViewBag.Title = "Advert Creating";
    Layout = "~/Areas/EstateAgent/Views/LayoutEstateAgent/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni İlan Ekleme Sayfası</h6>
                <form href="/EstateAgent/MyAdverts/CreateAdvert" method="post">

                    <div>
                        <label asp-for="Title" class="form-label">İlan Başlığı</label>
                        <input asp-for="Title" type="text" class="form-control">
                        <br>
                    </div>

                    <div>
                        <label asp-for="City" class="form-label">Şehir</label>
                        <input asp-for="City" type="text" class="form-control">
                        <br>
                    </div>
                    <div>
                        <label asp-for="District" class="form-label">İlçe</label>
                        <input asp-for="District" type="text" class="form-control">
                        <br>
                    </div>
                    <div>
                        <label asp-for="ProductCategory" class="form-label">Kategori</label>
                        @* <input asp-for="categoryName" type="text" class="form-control"> *@
                        <select asp-for="ProductCategory" asp-items="@ViewBag.SelectListItems"
                            class="form-control bg-white"></select>
                        <br>
                    </div>
                    <div>
                        <label asp-for="Price" class="form-label">Fiyat</label>
                        <input asp-for="Price" type="text" class="form-control">
                        <br>
                    </div>
                    <div>
                        <label asp-for="Type" class="form-label">Tür</label>
                        <select asp-for="Type" class="form-control bg-white">
                            <option>Sale</option>
                            <option>Rent</option>
                        </select>
                        <br>
                    </div>
                    <div>
                        <label asp-for="CoverImage" class="form-label">Kapak Fotoğrafı</label>
                        <input asp-for="CoverImage" type="text" class="form-control">
                        <br>
                    </div>
                    <div>
                        <label asp-for="Address" class="form-label">İlan Açık Adresi</label>
                        <input asp-for="Address" type="text" class="form-control"></textarea>
                        <br>
                    </div>
                    <div>
                        <label asp-for="Description" class="form-label">Açıklama</label>
                        <textarea asp-for="Description" type="text" class="form-control" rows="5"></textarea>
                        <br>
                    </div>

                    <button type="submit" class="btn btn-primary">İlanı Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>
